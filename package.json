{
  "name": "client",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "bun run build-regular && bun run build-minified",
    "build-regular": "bun build ./src/index.ts --outdir dist --format iife",
    "build-minified": "bun build ./src/index.ts --outdir dist --format iife --minify --entry-naming [dir]/[name].min.[ext]"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "prettier": "^3.6.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}